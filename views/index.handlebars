<center><h1>Burgers</h1></center>

<div id='addBurger'>
  <h2>Order a Burger</h2>
  <form class="create-update-form" action="burgers/create" method="POST">
    <div class="form-group">
      <label for="bu">Burger Name:</label>
      <input type="text" id="bu" name="burger_name">
    </div>
    <button type="submit">Add Burger</button>
  </form>
</div>


<div id='eatBurger'>
  <h2>Eat a Burger</h2>
    <ol>
      {{#each burgers}}
      {{#unless this.devoured}}
        <li>
          {{this.burger_name}}
          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="true">
            <button type="submit">DEVOUR!</button>
          </form>
          <form action="burgers/delete/{{this.id}}?_method=DELETE" method="POST">
            <button type="submit">Delete</button>
          </form>
        </li>
      {{/unless}}
    {{/each}}
  </ol>
</div>

</div>

<div id='eatenBurgers'>
  <h2>Already Eaten</h2>
  <ol>
    {{#each burgers}}
      {{#if this.devoured}}
        <li>
          {{this.burger_name}}
          <form action="burgers/update/{{this.id}}?_method=PUT" method="POST">
            <input type="hidden" name="devoured" value="false">
            <button type="submit">Remove from list</button>
          </form>
        </li>
      {{/if}}
    {{/each}}
  </ol>
</div>